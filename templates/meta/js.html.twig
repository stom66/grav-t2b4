{% set theme_config = attribute(config.themes, config.system.pages.theme) %}

{% block javascripts %}
	{% spaceless %}

		{% if theme_config.cdn_jquery_js %}
			{% do assets.add('https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js', {
				integrity  : "sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ==",
				crossorigin: "anonymous",
				priority   : 100
			}) %}
		{% endif %}

		{% if theme_config.cdn_bootstrap_js %}
			{% do assets.add('https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js', {
				integrity  : "sha512-72WD92hLs7T5FAXn3vkNZflWG6pglUDDpm87TeQmfSg8KnrymL2G30R7as4FmTwhgu9H7eSzDCX3mjitSecKnw==",
				crossorigin: "anonymous",
				priority   : 90
			}) %}
		{% endif %}

		{% if theme_config.cdn_glightbox_js %}
			{% do assets.add('https://cdn.jsdelivr.net/npm/glightbox@3.1.0/dist/js/glightbox.min.js', {
				integrity  : "sha512-DmZ8zx6VrSj+Nvwjg2ONA2LlRCsFyTZh9/rZH75alu+KoSTdjjVSX6z2a9kKiUlwSf6JIxzFjpw2YCyrGWk4nw==",
				crossorigin: "anonymous",
				priority   : 80
			}) %}
		{% endif %}

		{% if theme_config.ganalytics.enabled %}
			{% do assets.addJs("https://www.googletagmanager.com/gtag/js?id=" ~ theme_config.ganalytics.id, {
					async   : "true",
					priority: 80
				}) %}
		{% endif %}

		{% do assets.add('theme://dist/app.min.js', {
			group:'bottom'
		}) %}

	{% endspaceless %}
{% endblock %}